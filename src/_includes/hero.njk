{% macro hero(
  icon,
  image = '',
  eyebrow = 'Default Eyebrow',
  heading = 'Default Heading',
  paragraph = 'Default Paragraph',
  belowParagraph
) %}

  <section class="text-gray-200 py-8 lg:py-16">
    <div class="container">
      <div class="max-w-screen-md">
        <p class="uppercase font-bold text-gray-200 text-sm">
          {{ eyebrow | safe }}
        </p>
        <h1 class="mt-2 text-3xl md:text-4xl lg:text-6xl font-black leading-tight">
          {{ heading | safe }}
        </h1>
        <p class="mt-4 max-w-screen-sm text-base sm:text-lg lg:text-xl text-gray-200">
          {{ paragraph | safe }}
        </p>
        {% if belowParagraph %}
          {{ belowParagraph | safe }}
        {% endif %}
      </div>
    </div>
  </section>

{% endmacro %}
