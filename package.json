  "scripts": {
    "prod": "cross-env NODE_ENV=production npm-run-all clean -s build:* -p serve:*",
    "dev": "cross-env NODE_ENV=development npm-run-all -p serve:*",
    "build": "cross-env NODE_ENV=production npm-run-all clean -s build:*",
    "serve": "cross-env NODE_ENV=production npm-run-all -p serve:*",
    "clean": "rm -rf dist/*; rm -rf src/_lit/es/*",
    "deploy": "cross-env NODE_ENV=production npm-run-all build:* commit",
    "commit": "cd dist && git add --all && git commit -m \"Release\" && git push && cd ../",
    "build:ts": "tsc",
    "build:11ty": "eleventy --quiet",
    "build:webpack": "webpack",
    "serve:ts": "tsc -w",
    "serve:11ty": "eleventy --serve --quiet",
    "serve:webpack": "webpack --watch",
    "analyze": "lit-analyzer"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "htmlWhitespaceSensitivity": "ignore"
  },
  "browserslist": "> 2%",
  "dependencies": {
    "filament": "^1.53.4",
    "gl-matrix": "^3.4.3",
    "glob-parent": "^6.0.2",
    "hammerjs": "^2.0.8",
    "postcss-url": "^10.1.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/hammerjs": "^2.0.45",
    "@types/node": "^22.4.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "animejs": "^3.2.2",
    "autoprefixer": "^10.4.20",
    "compression-webpack-plugin": "^11.1.0",
    "connect-gzip-static": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.5",
    "date-fns": "^3.6.0",
    "glslCanvas": "^0.2.6",
    "lazysizes": "^5.3.2",
    "lit": "^3.2.0",
    "lit-analyzer": "^2.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "style-loader": "4.0.0",
    "tailwindcss": "^3.4.10",
    "tailwindcss-debug-screens": "^2.2.1",
    "ts-lit-plugin": "^2.0.2",
    "twgl.js": "^5.5.4",
    "typescript": "5.5",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "xterm": "^5.3.0"
  }
